<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorbackground1"
    tools:context=".JadwalSholatActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/text"
            android:gravity="center"
            android:textSize="20sp" />

        <DigitalClock
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text"
            android:gravity="center"
            android:textSize="20sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/subuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/text"
                android:text="Subuh"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/waktusubuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/ringsubuh"
                android:layout_width="42dp"
                android:layout_height="38dp"
                app:srcCompat="@drawable/alarm"
                android:layout_marginTop="110dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="40dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/dzuhur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/text"
                android:text="Dzuhur"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/waktudzuhur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/ringdzuhur"
                android:layout_width="42dp"
                android:layout_height="38dp"
                app:srcCompat="@drawable/alarm"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="40dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/ashar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/text"
                android:text="Ashar"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/waktuashar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/ringashar"
                android:layout_width="42dp"
                android:layout_height="38dp"
                app:srcCompat="@drawable/alarm"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="40dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/text"
                android:text="Maghrib"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/waktumaghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/ringmaghrib"
                android:layout_width="42dp"
                android:layout_height="38dp"
                app:srcCompat="@drawable/alarm"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="40dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/isya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/text"
                android:layout_marginRight="30dp"
                android:text="Isya"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/waktuisya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/text"
                android:layout_marginRight="50dp"
                android:textSize="16sp"  />

            <ImageButton
                android:id="@+id/ringisya"
                android:layout_width="42dp"
                android:layout_height="38dp"
                app:srcCompat="@drawable/alarm"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="40dp"/>
        </TableRow>
    </TableLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_refresh"
        android:src="@drawable/ic_refresh_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp" />

</RelativeLayout>